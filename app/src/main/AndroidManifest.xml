<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.HumanLearning2021.HumanLearningApp">

    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HumanLearningApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HumanLearning">
        <activity android:name=".view.SearchActivity"
                  android:exported="true" />
        <activity android:name=".view.dataset_editing.SelectPictureActivity"></activity>
        <activity android:name=".view.dataset_editing.AddPictureActivity" />
        <activity android:name=".view.dataset_editing.DisplayImageSetActivity" />
        <activity android:name=".view.dataset_editing.DatasetsOverviewActivity" />
        <activity
            android:name=".view.learning.LearningDatasetSelectionActivity"
            android:label="@string/LearningDatasetSelection_title" />
        <activity android:name=".view.dataset_editing.CategoriesEditingActivity" />
        <activity android:name=".view.dataset_editing.TakePictureActivity" />
        <activity android:name=".view.dataset_editing.DisplayImageActivity" />
        <activity android:name=".view.dataset_editing.DisplayDatasetActivity" />
        <activity android:name=".view.learning.LearningSettingsActivity" />
        <activity android:name=".view.learning.LearningActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>