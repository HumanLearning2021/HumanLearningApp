<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/goToCameraButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="launchToCameraActivity"
        android:text="@string/main_btAddImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goToDisplayDatasetButton" />

    <Button
        android:id="@+id/goToDisplayDatasetButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="launchToDisplayDatasetActivity"
        android:text="@string/main_btDisplayDataset"
        app:layout_constraintBottom_toTopOf="@+id/goToCameraButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goToLearningButton" />

    <Button
        android:id="@+id/goToLearningButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="launchToLearningActivity"
        android:text="@string/main_btLearning"
        app:layout_constraintBottom_toTopOf="@+id/goToDisplayDatasetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToLoginFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:onClick="launchToLoginFragment"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToCameraButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
