<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_and_category_item_imageView"
            android:contentDescription="@string/ImageAndCategory_itemContentDescription"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/image_and_category_item_imageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/image_and_category_item_imageView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>