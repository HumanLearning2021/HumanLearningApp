<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.dataset_editing.DisplayImageFragment">

    <ImageView
        android:id="@+id/display_image_viewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/imagetobedisplayed"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/display_image_guideline_land"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display_image_viewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/display_image_set_representative_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/display_image_guideline_land"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/display_image_set_representative_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setAsRepresentativePicture"
        app:layout_constraintBottom_toTopOf="@id/display_image_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/display_image_guideline_land"
        app:layout_constraintTop_toBottomOf="@id/display_image_viewCategory" />

    <ImageButton
        android:id="@+id/display_image_delete_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#BF1D1D"
        android:contentDescription="@string/buttontoremovepicturefromdataset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/display_image_guideline_land"
        app:layout_constraintTop_toBottomOf="@id/display_image_set_representative_picture"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/display_image_guideline_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />


</androidx.constraintlayout.widget.ConstraintLayout>