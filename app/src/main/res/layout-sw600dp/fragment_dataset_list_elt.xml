<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView_datasetList_elt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DatasetList_default_ds_name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_datasetList_elt_im1"
        app:layout_constraintEnd_toEndOf="@id/ds_list_elt_guideline2"
        app:layout_constraintStart_toStartOf="@id/ds_list_elt_guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_datasetList_elt_im0"
        android:layout_width="@dimen/DatasetList_im_size_tablet"
        android:layout_height="@dimen/DatasetList_im_size_tablet"
        android:background="@color/white"
        android:contentDescription="@string/DatasetList_im_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ds_list_elt_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_datasetList_elt_text"
        app:srcCompat="@drawable/default_representative_picture"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_datasetList_elt_im1"
        android:layout_width="@dimen/DatasetList_im_size_tablet"
        android:layout_height="@dimen/DatasetList_im_size_tablet"
        android:background="@color/white"
        android:contentDescription="@string/DatasetList_im_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ds_list_elt_guideline2"
        app:layout_constraintStart_toEndOf="@id/ds_list_elt_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/textView_datasetList_elt_text"
        app:srcCompat="@drawable/default_representative_picture"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_datasetList_elt_im2"
        android:layout_width="@dimen/DatasetList_im_size_tablet"
        android:layout_height="@dimen/DatasetList_im_size_tablet"
        android:background="@color/white"
        android:contentDescription="@string/DatasetList_im_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ds_list_elt_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView_datasetList_elt_text"
        app:srcCompat="@drawable/default_representative_picture"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_list_elt_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_list_elt_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

</androidx.constraintlayout.widget.ConstraintLayout>